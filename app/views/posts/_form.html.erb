<%= render "layouts/error_messages" %>
<%= form_with model: @post, local: true do |form| %>
  <div>
  <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
   <p><%= form.file_field :image, accept: "image/png,image/jpeg,image/gif" %></p>
    <%= form.submit button_value %>
  </div>
<% end %>